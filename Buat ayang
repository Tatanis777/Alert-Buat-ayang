<body>
    <h1>Mau chat pacar kamu??</h1>

    <div class="center">
        <button onclick="redirectToWhatsApp()">Coba tekan ini</button>

    <script>
        function redirectToWhatsApp() {
            // Replace '1234567890' with the phone number you want to redirect to
            var phoneNumber = '628995097495';
            // You can also include a message by appending &text=YourMessage to the URL
            var message = 'Pgelud';
            // Construct the WhatsApp URL
            var whatsappURL = 'https://api.whatsapp.com/send?phone=' + phoneNumber + '&text=Pgelud' + encodeURIComponent(message);
            // Redirect to WhatsApp
            window.location.href = whatsappURL;
        }
    </script>
